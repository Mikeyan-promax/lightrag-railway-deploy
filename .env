# LightRAG 配置文件 - Railway部署版本
# 此文件专门为Railway云端部署配置，使用环境变量引用

# ===== LLM 配置 =====
# DeepSeek模型配置
LLM_BINDING=openai
LLM_MODEL=deepseek-chat
LLM_BINDING_HOST=https://api.deepseek.com
LLM_BINDING_API_KEY=${DEEPSEEK_API_KEY}

# ===== OpenAI 兼容配置 =====
OPENAI_API_KEY=${DEEPSEEK_API_KEY}

# ===== 嵌入模型配置 =====
EMBEDDING_BINDING=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_BINDING_HOST=https://api.deepseek.com
EMBEDDING_BINDING_API_KEY=${DEEPSEEK_API_KEY}
EMBEDDING_DIM=1536

# ===== 可选：豆包Rerank配置 =====
RERANK_BINDING=doubao
RERANK_MODEL=ep-20241230140423-8xqkz
RERANK_BINDING_HOST=https://ark.cn-beijing.volces.com/api/v3
RERANK_BINDING_API_KEY=${DOUBAO_API_KEY}

# ===== 数据库配置 =====
# Railway会自动提供PostgreSQL环境变量
KV_STORAGE=PGKVStorage
VECTOR_STORAGE=PGVectorStorage
GRAPH_STORAGE=PGGraphStorage
DOC_STATUS_STORAGE=PGDocStatusStorage

# ===== 服务器配置 =====
HOST=0.0.0.0
PORT=9621
TIMEOUT=150
LOG_LEVEL=INFO
WORKING_DIR=./rag_storage
INPUT_DIR=./inputs

# ===== 性能配置 =====
MAX_ASYNC=8
EMBEDDING_FUNC_MAX_ASYNC=16
EMBEDDING_BATCH_NUM=32
CHUNK_SIZE=1200
CHUNK_OVERLAP_SIZE=100

# ===== 其他配置 =====
ENABLE_LLM_CACHE=true
ENABLE_LLM_CACHE_FOR_EXTRACT=true
TEMPERATURE=0.0
CORS_ORIGINS=*
SUMMARY_LANGUAGE=chinese

# ===== Railway特定配置 =====
# Railway会自动设置这些变量
# DATABASE_URL 会被Railway自动提供
# PORT 会被Railway自动设置