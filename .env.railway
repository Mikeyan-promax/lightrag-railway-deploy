###########################
### AI 模型配置
###########################
# DeepSeek API配置 - 注意：这些值将由Railway环境变量直接提供
LLM_BINDING=openai
LLM_MODEL=deepseek-chat
LLM_BINDING_HOST=https://api.deepseek.com
# LLM_BINDING_API_KEY 将由Railway环境变量 DEEPSEEK_API_KEY 提供

# OpenAI API Key (兼容性) - 将由Railway环境变量 DEEPSEEK_API_KEY 提供
# OPENAI_API_KEY 将由Railway环境变量 DEEPSEEK_API_KEY 提供
# 关键修复：强制设置OPENAI_API_BASE为DeepSeek端点
OPENAI_API_BASE=https://api.deepseek.com/v1

# 嵌入模型配置 - 豆包
EMBEDDING_BINDING=openai
EMBEDDING_MODEL=doubao-embedding-text-240715
EMBEDDING_DIM=2560
# EMBEDDING_BINDING_API_KEY 将由Railway环境变量 DOUBAO_API_KEY 提供
EMBEDDING_BINDING_HOST=https://ark.cn-beijing.volces.com/api/v3

# Rerank模型配置
RERANK_BINDING=openai
RERANK_MODEL=bge-reranker-v2-m3
RERANK_DIM=1024
# RERANK_BINDING_API_KEY 将由Railway环境变量提供
RERANK_BINDING_HOST=https://api.siliconflow.cn/v1

# 视觉模型配置
VISION_BINDING=doubao
VISION_MODEL=doubao-vision-pro-32k
# VISION_BINDING_API_KEY 将由Railway环境变量 DOUBAO_API_KEY 提供
VISION_BINDING_HOST=https://ark.cn-beijing.volces.com/api/v3

###########################
### LightRAG 配置
###########################
LIGHTRAG_WORKING_DIR=./rag_storage
LIGHTRAG_LOG_LEVEL=INFO
LIGHTRAG_CACHE_ENABLED=true
LIGHTRAG_CACHE_TYPE=file
LIGHTRAG_CACHE_DIR=./cache

###########################
### 存储配置
###########################
STORAGE_TYPE=file
STORAGE_PATH=./storage
UPLOAD_MAX_SIZE=10485760
ALLOWED_EXTENSIONS=txt,md,pdf,docx,doc,rtf

###########################
### 日志配置
###########################
LOG_LEVEL=INFO
LOG_FILE=./logs/lightrag.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

###########################
### JWT 认证配置
###########################
JWT_SECRET_KEY=your_jwt_secret_key_here_railway_2024_secure
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 认证开关（Railway部署建议启用）
AUTH_ENABLED=false

###########################
### Railway 特定配置
###########################
# Railway会自动设置这些环境变量
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PROJECT_ID=自动设置
# RAILWAY_SERVICE_ID=自动设置

# 强制使用Railway提供的PORT
# PORT 环境变量由Railway自动提供

###########################
### 调试配置
###########################
DEBUG=false
VERBOSE_LOGGING=true
RAILWAY_DEBUG=true